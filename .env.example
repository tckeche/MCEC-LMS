# MCEC LMS Environment Variables
# Copy this file to .env and fill in the values

# Database - Get from Supabase Dashboard → Settings → Database → Connection String
# Use the "Connection pooling" URL for better performance
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true

# Session secret - Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-here

# Bootstrap token for initial super admin setup (optional)
# Use this to set up your first admin account via POST /api/bootstrap/super-admin
BOOTSTRAP_TOKEN=your-bootstrap-token-here

# Port (set automatically by Fly.io, defaults to 5000 locally)
PORT=5000

# Node environment
NODE_ENV=development
